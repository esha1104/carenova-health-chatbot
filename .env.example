# ============= SERVER CONFIG =============
HOST=127.0.0.1 # Secure default: restricts to localhost. Use 0.0.0.0 only with network restrictions and AUTH.
PORT=8000
DEBUG=False
LOG_LEVEL=INFO

# ============= LLM CONFIG (OpenRouter) =============
# Get your API key at https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here
LLM_MODEL=meta-llama/llama-3-8b-instruct:free
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=512

# ============= EMBEDDINGS CONFIG =============
# Using OpenRouter (OpenAI-compatible) for embeddings
EMBEDDINGS_MODEL=text-embedding-3-small

# ============= DATABASE CONFIG =============
FAISS_INDEX_DIR=faiss_index
MEDICAL_KNOWLEDGE_PATH=medical_knowledge

# ============= RAG CONFIG =============
RAG_SCORE_THRESHOLD=0.55
RAG_K_RESULTS=5
RAG_CACHE_ENABLED=True

# ============= SESSION CONFIG =============
SESSION_TIMEOUT_MINUTES=30
MAX_FOLLOWUP_QUESTIONS=3

# ============= API CONFIG =============
ENABLE_CORS=True
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
RATE_LIMIT_PER_MINUTE=60 # Default 60. Implementation of burst allowance or tiered limits (e.g., token bucket) is recommended for better UX.

# ============= AUTH & SECURITY CONFIG =============
AUTH_METHOD=none # none|jwt|oauth|apikey
JWT_SECRET=your_jwt_secret_here # For JWT auth
JWT_EXPIRY=3600 # JWT expiry in seconds
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret
API_KEYS_ENABLED=False # Enable API key validation
ADMIN_API_KEY=your_admin_api_key_placeholder # Example: sk_admin_123456
SESSION_SECRET=your_session_secret_here # Secret for session signing
AUTH_PROVIDER=none # e.g., cognito, auth0
RBAC_POLICY_FILE=rbac_policy.json # Path to RBAC policy mapping roles to permissions
AUTHZ_ROLE_MAPPING=roles.json # Role mapping configuration

# ============= SECRETS MANAGEMENT =============
SECRETS_MANAGER_PROVIDER=none # e.g., aws, gcp, azure, vault
SECRETS_MANAGER_CONFIG={} # JSON config for secrets provider
